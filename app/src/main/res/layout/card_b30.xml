<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:maxWidth="180dp"
                                   android:maxHeight="85dp"
                                   android:minWidth="180dp"
                                   android:minHeight="85dp"

                                   android:layout_width="180dp"
                                   android:layout_height="85dp"
                                   android:foreground="@drawable/border"
                                   app:cardCornerRadius="20dp"
                                   app:cardElevation="0dp"
                                   app:layout_constraintEnd_toEndOf="parent"
                                   app:layout_constraintStart_toStartOf="parent"
                                   app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:maxWidth="180dp"
            android:maxHeight="85dp"
            android:minWidth="180dp"
            android:minHeight="85dp"
            android:layout_width="180dp"
            android:layout_height="85dp">


        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintBottom_toTopOf="@+id/linearLayout2">
            <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/b30_clearType"/>

            <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/b30_scoreType"/>
        </LinearLayout>
        <ImageView
                android:adjustViewBounds="true"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/b30_song_img"
                android:layout_marginStart="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:text="@string/cyaegha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b30_name" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/b30_song_img"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout" app:layout_constraintStart_toEndOf="@+id/b30_song_img"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/b30_name">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/b30_count_p"
                      android:textSize="9sp"
                      android:text="@string/test_123"
                      tools:ignore="SmallSp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/b30_count_f"
                      android:textSize="9sp"
                      android:text="@string/test_123"
                      tools:ignore="SmallSp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/b30_count_l"
                      android:textSize="9sp"
                      android:text="@string/test_123"
                      tools:ignore="SmallSp"/>

        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent" android:id="@+id/linearLayout2">

            <TextView
                    android:textSize="10sp"
                    android:text="@string/test_123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/b30_score"/>

            <TextView
                    android:text="@string/test_123"
                    android:textSize="7sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/b30_ptt"
                    app:layout_constraintStart_toStartOf="@+id/b30_score"
                    app:layout_constraintEnd_toEndOf="@+id/b30_score"
                    app:layout_constraintTop_toBottomOf="@+id/b30_score"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>